{
  "name": "kanji-grade-colorizer",
  "displayName": "Kanji Grade Colorizer",
  "description": "小学校の学年ごとに漢字を色分け表示（ファイル単位トグル）。",
  "author": {
    "name": "144Lab"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sgk/kanji-colorizer-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/sgk/kanji-colorizer-vscode/issues"
  },
  "homepage": "https://github.com/sgk/kanji-colorizer-vscode#readme",
  "version": "0.3.0",
  "publisher": "144Lab",
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:kanjiColorize.toggleFile",
    "onCommand:kanjiColorize.configureGrades"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kanjiColorize.toggleFile",
        "title": "小学校の漢字: このファイルでオン/オフ"
      },
      {
        "command": "kanjiColorize.configureGrades",
        "title": "小学校の漢字: 色付けする学年を選択",
        "icon": {
          "dark": "media/button_settings.svg",
          "light": "media/button_settings.svg"
        }
      },
      {
        "command": "kanjiColorize.button.off",
        "title": "小学校の漢字: オフ",
        "icon": {
          "dark": "media/button_off.svg",
          "light": "media/button_off.svg"
        }
      },
      {
        "command": "kanjiColorize.button.unknown",
        "title": "小学校の漢字: 漢字以外",
        "icon": {
          "dark": "media/button_unknown.svg",
          "light": "media/button_unknown.svg"
        }
      },
      {
        "command": "kanjiColorize.button.g1",
        "title": "小学校の漢字: 1年生",
        "icon": {
          "dark": "media/button_g1.svg",
          "light": "media/button_g1.svg"
        }
      },
      {
        "command": "kanjiColorize.button.g2",
        "title": "小学校の漢字: 2年生",
        "icon": {
          "dark": "media/button_g2.svg",
          "light": "media/button_g2.svg"
        }
      },
      {
        "command": "kanjiColorize.button.g3",
        "title": "小学校の漢字: 3年生",
        "icon": {
          "dark": "media/button_g3.svg",
          "light": "media/button_g3.svg"
        }
      },
      {
        "command": "kanjiColorize.button.g4",
        "title": "小学校の漢字: 4年生",
        "icon": {
          "dark": "media/button_g4.svg",
          "light": "media/button_g4.svg"
        }
      },
      {
        "command": "kanjiColorize.button.g5",
        "title": "小学校の漢字: 5年生",
        "icon": {
          "dark": "media/button_g5.svg",
          "light": "media/button_g5.svg"
        }
      },
      {
        "command": "kanjiColorize.button.g6",
        "title": "小学校の漢字: 6年生",
        "icon": {
          "dark": "media/button_g6.svg",
          "light": "media/button_g6.svg"
        }
      },
      {
        "command": "kanjiColorize.button.other",
        "title": "小学校の漢字: 教育漢字外",
        "icon": {
          "dark": "media/button_other.svg",
          "light": "media/button_other.svg"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "kanjiColorize.configureGrades",
          "group": "navigation@05",
          "when": "editorIsOpen && kanjiColorize.isActive"
        },
        {
          "command": "kanjiColorize.button.off",
          "group": "navigation@99",
          "when": "editorIsOpen && kanjiColorize.buttonLabel == 'off'"
        },
        {
          "command": "kanjiColorize.button.unknown",
          "group": "navigation@99",
          "when": "editorIsOpen && kanjiColorize.buttonLabel == 'unknown'"
        },
        {
          "command": "kanjiColorize.button.g1",
          "group": "navigation@99",
          "when": "editorIsOpen && kanjiColorize.buttonLabel == 'g1'"
        },
        {
          "command": "kanjiColorize.button.g2",
          "group": "navigation@99",
          "when": "editorIsOpen && kanjiColorize.buttonLabel == 'g2'"
        },
        {
          "command": "kanjiColorize.button.g3",
          "group": "navigation@99",
          "when": "editorIsOpen && kanjiColorize.buttonLabel == 'g3'"
        },
        {
          "command": "kanjiColorize.button.g4",
          "group": "navigation@99",
          "when": "editorIsOpen && kanjiColorize.buttonLabel == 'g4'"
        },
        {
          "command": "kanjiColorize.button.g5",
          "group": "navigation@99",
          "when": "editorIsOpen && kanjiColorize.buttonLabel == 'g5'"
        },
        {
          "command": "kanjiColorize.button.g6",
          "group": "navigation@99",
          "when": "editorIsOpen && kanjiColorize.buttonLabel == 'g6'"
        },
        {
          "command": "kanjiColorize.button.other",
          "group": "navigation@99",
          "when": "editorIsOpen && kanjiColorize.buttonLabel == 'other'"
        }
      ],
      "editor/context": [
        {
          "command": "kanjiColorize.toggleFile",
          "group": "navigation",
          "when": "editorTextFocus"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Kanji Grade Colorizer",
      "properties": {
        "kanjiColorize.colors.g1": {
          "type": "string",
          "default": "#fffa99",
          "description": "1年生の色"
        },
        "kanjiColorize.colors.g2": {
          "type": "string",
          "default": "#ffd199",
          "description": "2年生の色"
        },
        "kanjiColorize.colors.g3": {
          "type": "string",
          "default": "#ff9999",
          "description": "3年生の色"
        },
        "kanjiColorize.colors.g4": {
          "type": "string",
          "default": "#99ffce",
          "description": "4年生の色"
        },
        "kanjiColorize.colors.g5": {
          "type": "string",
          "default": "#a399ff",
          "description": "5年生の色"
        },
        "kanjiColorize.colors.g6": {
          "type": "string",
          "default": "#d699ff",
          "description": "6年生の色"
        },
        "kanjiColorize.colors.other": {
          "type": "string",
          "default": "#ef4444",
          "description": "教育漢字以外（範囲外）の色（既定：赤）"
        },
        "kanjiColorize.textColor": {
          "type": "string",
          "default": "#000000",
          "description": "背景色を適用した文字の色（空欄にするとテーマの文字色を使用）"
        },
        "kanjiColorize.opacity": {
          "type": "number",
          "default": 0.6,
          "minimum": 0,
          "maximum": 1,
          "description": "背景色の不透明度"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -w",
    "build": "tsc",
    "vscode:prepublish": "npm run build"
  },
  "keywords": [
    "kanji",
    "japanese",
    "colorizer",
    "education"
  ],
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}
