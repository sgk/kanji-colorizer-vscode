{
  "name": "kanji-grade-colorizer",
  "displayName": "%displayName%",
  "description": "%description%",
  "author": {
    "name": "144Lab"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sgk/kanji-colorizer-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/sgk/kanji-colorizer-vscode/issues"
  },
  "homepage": "https://github.com/sgk/kanji-colorizer-vscode#readme",
  "version": "0.3.0",
  "publisher": "144Lab",
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:kanjiColorize.toggleFile",
    "onCommand:kanjiColorize.configureGrades"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kanjiColorize.toggleFile",
        "title": "%command.toggleFile.title%"
      },
      {
        "command": "kanjiColorize.configureGrades",
        "title": "%command.configureGrades.title%",
        "icon": {
          "dark": "media/button_settings.svg",
          "light": "media/button_settings.svg"
        }
      },
      {
        "command": "kanjiColorize.button.off",
        "title": "%command.off.title%",
        "icon": {
          "dark": "media/button_off.svg",
          "light": "media/button_off.svg"
        }
      },
      {
        "command": "kanjiColorize.button.unknown",
        "title": "%command.unknown.title%",
        "icon": {
          "dark": "media/button_unknown.svg",
          "light": "media/button_unknown.svg"
        }
      },
      {
        "command": "kanjiColorize.button.g0",
        "title": "%command.g0.title%",
        "icon": {
          "dark": "media/button_g0.svg",
          "light": "media/button_g0.svg"
        }
      },
      {
        "command": "kanjiColorize.button.g1",
        "title": "%command.g1.title%",
        "icon": {
          "dark": "media/button_g1.svg",
          "light": "media/button_g1.svg"
        }
      },
      {
        "command": "kanjiColorize.button.g2",
        "title": "%command.g2.title%",
        "icon": {
          "dark": "media/button_g2.svg",
          "light": "media/button_g2.svg"
        }
      },
      {
        "command": "kanjiColorize.button.g3",
        "title": "%command.g3.title%",
        "icon": {
          "dark": "media/button_g3.svg",
          "light": "media/button_g3.svg"
        }
      },
      {
        "command": "kanjiColorize.button.g4",
        "title": "%command.g4.title%",
        "icon": {
          "dark": "media/button_g4.svg",
          "light": "media/button_g4.svg"
        }
      },
      {
        "command": "kanjiColorize.button.g5",
        "title": "%command.g5.title%",
        "icon": {
          "dark": "media/button_g5.svg",
          "light": "media/button_g5.svg"
        }
      },
      {
        "command": "kanjiColorize.button.g6",
        "title": "%command.g6.title%",
        "icon": {
          "dark": "media/button_g6.svg",
          "light": "media/button_g6.svg"
        }
      },
      {
        "command": "kanjiColorize.button.g7",
        "title": "%command.g7.title%",
        "icon": {
          "dark": "media/button_g7.svg",
          "light": "media/button_g7.svg"
        }
      },
      {
        "command": "kanjiColorize.button.g8",
        "title": "%command.g8.title%",
        "icon": {
          "dark": "media/button_g8.svg",
          "light": "media/button_g8.svg"
        }
      },
      {
        "command": "kanjiColorize.button.g9",
        "title": "%command.g9.title%",
        "icon": {
          "dark": "media/button_g9.svg",
          "light": "media/button_g9.svg"
        }
      },
      {
        "command": "kanjiColorize.button.other",
        "title": "%command.other.title%",
        "icon": {
          "dark": "media/button_other.svg",
          "light": "media/button_other.svg"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "kanjiColorize.configureGrades",
          "group": "navigation@05",
          "when": "editorIsOpen && kanjiColorize.isActive"
        },
        {
          "command": "kanjiColorize.button.off",
          "group": "navigation@99",
          "when": "editorIsOpen && kanjiColorize.buttonLabel == 'off'"
        },
        {
          "command": "kanjiColorize.button.unknown",
          "group": "navigation@99",
          "when": "editorIsOpen && kanjiColorize.buttonLabel == 'unknown'"
        },
        {
          "command": "kanjiColorize.button.g0",
          "group": "navigation@99",
          "when": "editorIsOpen && kanjiColorize.buttonLabel == 'g0'"
        },
        {
          "command": "kanjiColorize.button.g1",
          "group": "navigation@99",
          "when": "editorIsOpen && kanjiColorize.buttonLabel == 'g1'"
        },
        {
          "command": "kanjiColorize.button.g2",
          "group": "navigation@99",
          "when": "editorIsOpen && kanjiColorize.buttonLabel == 'g2'"
        },
        {
          "command": "kanjiColorize.button.g3",
          "group": "navigation@99",
          "when": "editorIsOpen && kanjiColorize.buttonLabel == 'g3'"
        },
        {
          "command": "kanjiColorize.button.g4",
          "group": "navigation@99",
          "when": "editorIsOpen && kanjiColorize.buttonLabel == 'g4'"
        },
        {
          "command": "kanjiColorize.button.g5",
          "group": "navigation@99",
          "when": "editorIsOpen && kanjiColorize.buttonLabel == 'g5'"
        },
        {
          "command": "kanjiColorize.button.g6",
          "group": "navigation@99",
          "when": "editorIsOpen && kanjiColorize.buttonLabel == 'g6'"
        },
        {
          "command": "kanjiColorize.button.g7",
          "group": "navigation@99",
          "when": "editorIsOpen && kanjiColorize.buttonLabel == 'g7'"
        },
        {
          "command": "kanjiColorize.button.g8",
          "group": "navigation@99",
          "when": "editorIsOpen && kanjiColorize.buttonLabel == 'g8'"
        },
        {
          "command": "kanjiColorize.button.g9",
          "group": "navigation@99",
          "when": "editorIsOpen && kanjiColorize.buttonLabel == 'g9'"
        },
        {
          "command": "kanjiColorize.button.other",
          "group": "navigation@99",
          "when": "editorIsOpen && kanjiColorize.buttonLabel == 'other'"
        }
      ],
      "editor/context": [
        {
          "command": "kanjiColorize.toggleFile",
          "group": "navigation",
          "when": "editorTextFocus"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "%configuration.title%",
      "properties": {
        "kanjiColorize.textColor": {
          "type": "string",
          "default": "#000000",
          "description": "%config.textColor.description%"
        },
        "kanjiColorize.opacity": {
          "type": "number",
          "default": 0.6,
          "minimum": 0,
          "maximum": 1,
          "description": "%config.opacity.description%"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -w",
    "build": "tsc",
    "generate-icons": "node -e \"require('./out/iconGenerator').generateGradeIconsCLI()\"",
    "vscode:prepublish": "npm run build && npm run generate-icons"
  },
  "keywords": [
    "kanji",
    "japanese",
    "colorizer",
    "education"
  ],
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}
